<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <controls>
        <control type="list" id="250">
            <left>750</left>
            <top>40</top>
            <width>1170</width>
            <height>100%</height>
            <orientation>vertical</orientation>
            <itemlayout height="310">
                <control type="image">
                    <left>5</left>
                    <top>5</top>
                    <width>490</width>
                    <height>271</height>
                    <texture background="false" fallback="fallbacks/video_thumb.png">$INFO[ListItem.Art(thumb)]</texture>

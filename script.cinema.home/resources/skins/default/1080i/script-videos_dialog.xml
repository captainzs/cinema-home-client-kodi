                    <aligny>top</aligny>
                    <wrapmultiline>false</wrapmultiline>
                    <scroll>true</scroll>
                    <label>[B]$INFO[ListItem.Title][/B]</label>
                    <font>font14</font>
                    <textcolor>FFFFFFFF</textcolor>
                </control>
                <control type="label">
                    <visible>!String.IsEmpty(ListItem.Property(Type))</visible>
                    <left>530</left>
                    <top>50</top>
                    <height>30</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <scroll>false</scroll>
                    <wrapmultiline>false</wrapmultiline>
